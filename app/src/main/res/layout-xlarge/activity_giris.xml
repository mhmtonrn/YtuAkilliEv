<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatihkayranci.ytuakilliev.GirisActivity"
    android:background="@mipmap/arkaplan">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="115dp"
                android:layout_height="33dp"
                android:text="Akıllı Ev"
                android:id="@+id/bilgi"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:background="@drawable/buttonshape4"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/hakkimizda"
                android:layout_alignEnd="@+id/hakkimizda"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:text="Güncelleme"
                android:id="@+id/button"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/buttonshape5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="Hakkımızda"
                android:id="@+id/hakkimizda"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/buttonshape6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton"
            android:background="@mipmap/imagebuton"

            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button

    android:id="@+id/klima"

    android:text="Klima"
    android:textColor="#FFFFFF"
    android:textSize="20sp"

    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/buttonshape3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp" />

    <Button

android:id="@+id/TV"

android:text="TV"
android:textColor="#FFFFFF"
android:textSize="30sp"
android:layout_width="140dp"
android:layout_height="140dp"
android:background="@drawable/buttonshape"
android:shadowColor="#a86887"
android:shadowDx="0"
android:shadowDy="0"
android:shadowRadius="5"
        android:layout_alignBottom="@+id/klima"
        android:layout_alignLeft="@+id/priz2"
        android:layout_alignStart="@+id/priz2"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:textColor="#FFFFFF"

android:background="@drawable/buttonshape2"
android:text="Priz3"
android:id="@+id/priz3"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/priz1"
        android:layout_toLeftOf="@+id/klima"
        android:layout_toStartOf="@+id/klima" />

    <Button
android:layout_width="85dp"
android:layout_height="85dp"
android:background="@drawable/buttonshape3"
android:text="Priz2"
    android:textColor="#FFFFFF"
android:id="@+id/priz2"

        android:layout_marginRight="175dp"
        android:layout_marginEnd="175dp"
        android:layout_below="@+id/priz3"
        android:layout_toLeftOf="@+id/priz3"
        android:layout_toStartOf="@+id/priz3" />

    <Button
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:textColor="#FFFFFF"
android:text="Priz1"
android:id="@+id/priz1"
android:background="@drawable/buttonshape2"
        android:layout_below="@+id/TV"
        android:layout_toLeftOf="@+id/TV"
        android:layout_toStartOf="@+id/TV"
        android:layout_marginRight="92dp"
        android:layout_marginEnd="92dp" />

</RelativeLayout>