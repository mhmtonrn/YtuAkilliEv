<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatihkayranci.ytuakilliev.Klima"
    android:id="@+id/rl">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="265dp"
        android:layout_height="160dp"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="265dp"
            android:layout_height="100dp"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="FAN +"
                    android:onClick="setting"
                    android:id="@+id/fan"
                    android:background="@drawable/tus2"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fan -"
                    android:onClick="setting"
                    android:id="@+id/fan2"
                    android:background="@drawable/tus2"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:text="I/O"
                    android:id="@+id/io"
                    android:background="@drawable/tus"
                    android:onClick="setting"
                    android:layout_marginBottom="3dp"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="100dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Temp+"
                    android:id="@+id/temp"
                    android:onClick="setting"
                    android:background="@drawable/tus2"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="temp -"
                    android:id="@+id/temp2"
                    android:onClick="setting"
                    android:background="@drawable/tus2"
                    android:layout_marginBottom="3dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="265dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="COOL"
                android:onClick="setting"
                android:id="@+id/cool"
                android:background="@drawable/tus3" />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="FACE"
                android:onClick="setting"
                android:id="@+id/face"
                android:layout_marginLeft="6dp"
                android:background="@drawable/tus4"
                android:layout_marginRight="4dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="HUM"
                android:onClick="setting"
                android:id="@+id/hum"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/tus5" />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="WARM"
                android:onClick="setting"
                android:id="@+id/warm"
                android:background="@drawable/tus6" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="314dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:background="@mipmap/klima_arkaplan2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/imageView2">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FAN   :"
            android:id="@+id/textView10"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/kl_mode"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView8"
            android:layout_marginTop="15dp"
            android:textColor="#9e9e9e"
            android:text="________" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/kl_temp"
            android:layout_below="@+id/kl_mode"
            android:layout_toRightOf="@+id/textView8"
            android:layout_alignRight="@+id/kl_mode"
            android:layout_alignEnd="@+id/kl_mode"
            android:textSize="16dp"
            android:textColor="#9e9e9e"
            android:text="_________" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/kl_fan"
            android:layout_below="@+id/kl_temp"
            android:layout_alignRight="@+id/kl_temp"
            android:layout_alignEnd="@+id/kl_temp"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:textSize="16dp"
            android:textColor="#9e9e9e"
            android:text="_________" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TEMP:"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MOD  : "
            android:textSize="20dp"
            android:id="@+id/textView9"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

</RelativeLayout>
