<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatihkayranci.ytuakilliev.GirisActivity"
    android:background="@mipmap/arkaplan">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/relativeLayout2"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton">

            <Button
                android:layout_width="115dp"
                android:layout_height="33dp"
                android:text="Akıllı Ev"
                android:id="@+id/bilgi"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:background="@drawable/buttonshape4"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:text="Güncelleme"
                android:id="@+id/guncelleme"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/buttonshape5"
                android:gravity="top|bottom|center_horizontal"
                android:layout_below="@+id/hakkimizda"
                android:layout_alignRight="@+id/hakkimizda"
                android:layout_alignEnd="@+id/hakkimizda" />

            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:text="Hakkımızda"
                android:id="@+id/hakkimizda"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/buttonshape6"
                android:gravity="top|bottom|center_horizontal"
                android:layout_below="@+id/bilgi"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton"
            android:background="@mipmap/imagebuton"

            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout6">

            <Button

        android:id="@+id/TV"

        android:text="TV"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#a86887"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:gravity="top|bottom|center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/relativeLayout6"
            android:layout_toRightOf="@+id/relativeLayout6">

            <Button

            android:id="@+id/klima"

            android:text="Klima"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="top|bottom|center_horizontal" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/relativeLayout7"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout10"
            android:layout_toEndOf="@+id/relativeLayout10"
            android:layout_marginLeft="5dp">

            <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:textColor="#FFFFFF"

        android:background="@drawable/buttonshape2"
        android:text="Priz3"
        android:id="@+id/priz3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="top|bottom|center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout10">

            <RelativeLayout
                android:layout_width="107dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout9"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true">

                <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:textColor="#FFFFFF"
            android:text="Priz1"
            android:id="@+id/priz1"
            android:background="@drawable/buttonshape2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="93dp"
                android:layout_height="150dp"
                android:id="@+id/relativeLayout8"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/relativeLayout9">

                <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/buttonshape3"
            android:text="Priz2"
                android:textColor="#FFFFFF"
            android:id="@+id/priz2"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>